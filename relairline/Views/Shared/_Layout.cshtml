<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>REL Airlines Contact</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="~/Content/newStyleSheet.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body onload="checkForUserName()">
    <header>
        <div class="container-fluid text-center" style="background-color:blue; height: 30vh">
            <p class="display-4 font-weight-bold" style="color: lime; padding-top: 80px;">
                <img class="pb-3" src="~/Content/images/airplane.jpg" alt="airplane" width="100" height="75"/>
                <i>REL</i><span class="text-light">AirLines</span>
            </p>
            <div class="container">
                <label class="float-right text-light pr-3" id="signed_in_name"></label>
            </div>
        </div>

        <nav class="navbar navbar-expand-md justify-content-between" style="background-color: blue;">
            <div class="container">
                <div class="navbar-nav">
                    <a>@Html.ActionLink("Home", "Index", "Home", new { @class = "header_nav_links nav-item nav-link" })</a>
                    <a>@Html.ActionLink("Booking", "Booking", "Home", new { @class = "header_nav_links nav-item nav-link" })</a>
                    <a>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "header_nav_links nav-item nav-link" })</a>
                    <a>@Html.ActionLink("About", "About", "Home", new { @class = "header_nav_links nav-item nav-link" })</a>
                </div>
                <div class="navbar-nav">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>

    </header>
    <div class="container body-content">
        @RenderBody()  
    </div>
    <footer>
        <div class="jumbotron jumbotron-fluid mb-0" style="background-color: blue;">
            <div class="container">
                <table class="ftr table table-borderless">
                    <tr>
                        <th>About REL</th>
                        <th>Customer service</th>
                        <th>Products and services</th>
                        <th>Follow Us</th>
                    </tr>
                    <tr>
                        <td>Who we are</td>
                        <td>Contact us</td>
                        <td>Optional services and fees</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Careers</td>
                        <td>Feedvack</td>
                        <td>Corporate travel</td>
                        <td>Vistit our blog</td>
                    </tr>
                    <tr>
                        <td>Newsroom</td>
                        <td>Travel Advisories</td>
                        <td>EasyBiz</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Legal</td>
                        <td>Customer commitment</td>
                        <td>Travel agents</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Privacy notice</td>
                        <td>Tarmac delay plan</td>
                        <td>Cargo</td>
                        <td></td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                </table>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


        <script src="js/contactjs.js"></script>
        <script src="js/passValueJs.js"></script>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </footer>
</body>
</html>